# ==========================================
# Docker Compose Environment Configuration
# ==========================================
# Copy this file to .env.docker and fill in your actual values

# ==========================================
# Build Configuration
# ==========================================
# Options: development, production
BUILD_TARGET=development
NODE_ENV=development

# ==========================================
# Port Configuration
# ==========================================
CLIENT_PORT=3000
SERVER_PORT=5000
MONGO_PORT=27017

# ==========================================
# Server Configuration
# ==========================================
# Frontend URL (used by server for CORS)
FRONTEND_URL=http://localhost:3000

# ==========================================
# Razorpay Configuration
# ==========================================
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
NEXT_PUBLIC_RAZORPAY_KEY_ID=your_razorpay_key_id

# ==========================================
# Database Configuration (MongoDB)
# ==========================================
# Leave MONGODB_URI empty to use in-memory MongoDB for development
# For production with Docker MongoDB, use: mongodb://admin:password@mongodb:27017/resumepro?authSource=admin
MONGODB_URI=
MONGODB_DB_NAME=resumepro

# MongoDB Root Credentials (only used if mongodb service is enabled)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password

# ==========================================
# Email Configuration
# ==========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password
EMAIL_FROM=ResumePro <noreply@resumepro.com>

# ==========================================
# Payment Configuration
# ==========================================
PAYMENT_AMOUNT=4900
PAYMENT_CURRENCY=INR
NEXT_PUBLIC_PAYMENT_AMOUNT=4900
NEXT_PUBLIC_PAYMENT_CURRENCY=INR

# ==========================================
# Client Configuration
# ==========================================
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_SERVER_URL=http://localhost:5000
NEXT_PUBLIC_APP_NAME=ResumePro
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ==========================================
# Analytics Configuration (Optional)
# ==========================================
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# ==========================================
# Groq API Configuration (Optional)
# ==========================================
# Fallback for Ollama
GROQ_API_KEY=your_groq_api_key_here

# ==========================================
# Download Settings
# ==========================================
DOWNLOAD_LINK_VALIDITY_DAYS=365
